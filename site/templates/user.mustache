<div class="page-header">
    <h1>{{user.nickname}}</h1>
</div>
<div class="row">
    <div class="span4">
        <img src="http://www.gravatar.com/avatar/{{user.hash}}?s=256&d=mm">
        <p>
        <h1>Web Score: {{user.score}}</h1>
    </div>
    <div class="span8">
        <form class="form-horizontal">
          <fieldset>
            <div class="control-group">
              <label class="form-label" for="location">Location</label>
              <div class="controls">
                <input class="span5 disabled" id="location" name="location" type="text" value="{{user.location}}" disabled/>
              </div>
            </div><!-- /clearfix -->
            <div class="control-group">
              <label class="form-label" for="textarea">Bio</label>
              <div class="controls">
                <textarea class="span5 disabled" id="bio" name="bio" rows="3" disabled>{{user.bio}}</textarea>
              </div>
            </div><!-- /clearfix -->
          </fieldset>
        </form>
    </div>
</div>
<div class="row">
    <div class="span12">
        <h1>Achievements</h1>
    </div>
</div>
<div class="row">
    <div id="achievements" class="span12">
    </div>
</div>