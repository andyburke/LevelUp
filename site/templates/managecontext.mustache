<div class="page-header">
    <h1>{{name}}</h1>
</div>
<div class="row">
    <div class="span7">
        <img id="context-image" src="{{image}}" width="200" height="200" />
        <form class="form-horizontal">
            <fieldset>
                <div class="control-group">
                    <div class="controls">
                        <input type="file" name="image-file" id="image-file" />
                    </div>
                </div>
                <div class="control-group">
                    <label>Unique ID</label>
                    <div class="controls">
                        <input class="input-xlarge disabled" id="id" name="id" type="text" value="{{_id}}" disabled />
                    </div>
                </div><!-- /clearfix -->
                <div class="control-group">
                    <label class="form-label">API Secret</label>
                    <div class="controls">
                        <input class="input-xlarge disabled" id="apiKey" name="apiKey" type="text" value="{{apiKey}}" disabled />
                        <div class="help-block">
                            This is the secret you can use to access the API to grant achievements.
                        </div>
                        <button class="btn btn-primary reset-apikey-button" data-loading-text="Resetting..." data-complete-text="Reset!">Reset API Key</button>
                    </div>
                </div><!-- /clearfix -->
                <div class="control-group">
                    <label for="name">Name</label>
                    <div class="controls">
                        <input class="input-xlarge" id="name" name="name" type="text" value="{{name}}" />
                    </div>
                </div><!-- /clearfix -->
                <div class="control-group">
                    <label for="url">URL</label>
                    <div class="controls">
                        <input class="input-xlarge" id="url" name="url" type="text" value="{{url}}" />
                    </div>
                </div><!-- /clearfix -->
                <div class="control-group">
                    <label for="textarea">Description</label>
                    <div class="controls">
                        <textarea class="input-xlarge" id="description" name="description" rows="3">{{description}}</textarea>
                    </div>
                </div><!-- /clearfix -->
                <div class="form-actions">
                    <button class="btn btn-primary update-context-button" data-loading-text="Updating..." data-complete-text="Updated!">Update</button>&nbsp;<button type="reset" class="btn reset-context-button">Reset</button>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="span4">
        <h2>Owners</h2>
        <div id="ownerlist">
        </div>
    </div>
</div>
<div class="row">
    <div id="achievementclasses" class="span12">
    </div>
</div>

