<div class="page-header">
    <h1>{{context.name}} > Create Achievement Class</h1>
</div>
<div class="row">
    <div class="span8">
        <form>
            <fieldset>
                <div class="clearfix">
                    <label for="name">Name</label>
                    <div class="input">
                        <input class="span5" id="name" name="name" size="30" type="text" />
                    </div>
                </div><!-- /clearfix -->
                <div class="clearfix">
                    <label for="description">Description</label>
                    <div class="input">
                        <textarea class="span5" id="description" name="description" rows="3"></textarea>
                    </div>
                </div><!-- /clearfix -->
                <input type="hidden" id="contextId" name="contextId" value="{{context._id}}" />
                <div class="actions">
                    <input type="submit" class="btn primary button-create-achievementclass" value="Create">
                </div>
            </fieldset>
        </form>
    </div>
    <div class="extra span6">
        <h2>Create an AchievementClass</h2>
        <p>
            This is a thing.
        </p>
    </div>
</div>
